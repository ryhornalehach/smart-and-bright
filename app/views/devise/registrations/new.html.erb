<div class="row">
  <div class="col s12">
    <h3>Sign up</h3>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :name, class: 'active' %>
      <%= f.text_field :name %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :email, class: 'active' %>
      <%= f.email_field :email , :required => true %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 l6">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" , :required => true %>
    </div>
    <div class="input-field col s12 l6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" , :required => true %>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= f.submit "Sign up", class: "btn waves-effect waves-light navbar-color-dark" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
