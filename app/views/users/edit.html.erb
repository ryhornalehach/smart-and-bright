<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="col s12">
        <h4><b>Edit User <%= @user.name.capitalize %></b></h4>
      </div>
    </div>

    <%= form_for @user do |f| %>
      <div class="row">
        <div class="input-field col s12 l6">
          <%= f.text_field :name, type: "text", class: "validate", :required => true %>
          <%= f.label :name, class: "active"%>
        </div>
        <div class="input-field col s12 l6">
          <%= f.label :email, class: 'active' %>
          <%= f.email_field :email , :required => true %>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <p>Is the user an admin?</p>
          <%= f.label :admin, class: 'active' %>
          <%= f.collection_radio_buttons :admin, [ [true, "YES"], [false, "NO"] ], :first, :last %>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <%= f.submit "Update User", class: "btn waves-effect waves-light navbar-color-dark" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
